<% include ./partials/header %>
  <div class="panel panel-default col-md-5" id="guest-panel">
    <div>
      <h3 class="text-center"><%= guest.name %>'s Reviews</h3>
      <h4 class='text-center'>Avg Rating 
        <% var total = 0; %>
        <% for (i=reviews.length-1; i>=0; i--){ %>
          <% total = parseInt(total) + parseInt(reviews[i].ind_rating) %>
          <% } %>
          <%= Math.round( (total/reviews.length) * 10) / 10%>
      </h4>
    </div>
    <div class="panel-body" id="guest_recent">
      <ul class='list-group' style=" list-style: none">
       <% for (i=reviews.length-1; i>=0; i--){ %>
       <li class='list-group-item'>Reviewer <a href=<%='/users/'+reviews[i]['user_ID'] %>><%= reviews[i]['userName'] %></a> | Rating: <%=reviews[i]['ind_rating'] %> <br>Review: <%= reviews[i]['comment'] %></a> </li>
       <% } %>
     </ul>
   </div>
  </div>
  <div class="panel panel-default col-md-3" id="guest_rev">
    <form style="text-align: center" action="/guests/<%= guestID  %>" method="post">
      <div class='well'>
        <fieldset>
          <textarea id="guest_id" name="guest_id" style="display:none;" value="<%= guest.id %>"></textarea>
          <label id="guest_name" for="review"><h3>Review <%=guest.name%></h3></label></br>
          <input required type="hidden" name="guest_name" value="<%=guest.name%>">
          <textarea id="review" name="review" placeholder="Enter your guest review here"></textarea>
          <br />
          <label for="rating">Guest Rating:</label>
          <select id="rating" name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select></br>
          <input  class='submit btn btn-default' type="submit" value="Submit" />
        </fieldset>
      </div>
    </form>
  </div>

<% include ./partials/footer %>