<% include ./partials/header %>
    
  <div class="panel panel-default col-md-5" id="user-panel">
    <div >
      <h2 class="text-center"><%= reviews[0].userName %>'s Reviews</h2>
    </div>
    <div class="panel-body" id="user_rev">
      <ul class='list-group' style="list-style: none">
         <% for (i=reviews.length-1; i>=0; i--){ %>
           <li class='user_reviews list-group-item'><a href="/guests/<%= reviews[i]['guest_ID']%>"> <%= reviews[i]['guestName'] %> </a> <br>Review: <%= reviews[i]['comment'] %><br> Rating: <%=reviews[i]['ind_rating'] %></li>
          <% } %>
      </ul>
    </div>
  </div>
  <div class="row panel panel-default col-md-3 hidden-600" id="review_panel">
      <form action="/users" method="post">
          <h2 class="review_guest text-center">Review a Guest</h2>
          <div class='well'>
            <fieldset>
                <label for="name">Guest Name</label>
                <input type="text" id="name" name="name" placeholder="Enter guest's name" />
                <br />
                <label for="email">Guest Email</label>
                <input type="email" id="email" name="email" placeholder="Enter guest's email" />
                </br></br>
                <input  class='submit' type="submit" value="Submit" />
            </fieldset>
          </div>
      </form>
  </div>

<% include ./partials/footer %>